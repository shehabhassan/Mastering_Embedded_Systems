#include <stdint.h>

//#if !defined(__SOFT_FP__) && defined(__ARM_FP)
//  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
//#endif

typedef volatile unsigned int vunit_32_t;

#define RCC_Base        0x40021000
#define Offset_APB2     0x18

#define PORTA_Base      0x40010800
#define Offset_CRH      0x04
#define Offset_ODR      0x0C

//#define RCC_APB2ENR    *(volatile uint32_t *)(RCC_Base   + 0x18)
#define GPIO_CRH        *(volatile uint32_t *)(PORTA_Base + 0x04)
#define GPIO_ODR        *(volatile uint32_t *)(PORTA_Base + 0x0C)


#define PORTA_SET (1<<2) // bit number 2
#define GPIOA_10  (1UL<<10)

typedef  union{
	 vunit_32_t ALL_BITS;
	 struct{
		 vunit_32_t reserved:9;
		 vunit_32_t PIN10:1;
	 }GPIOA;
}PORTA_REG;

//volatile PORTA_REG *REG_PORT = RCC_APB2ENR;

int main(void)
{
	RCC_APB2ENR |= PORTA_SET; // SET CLOCK for PORTA
	GPIO_CRH &= 0xFF0FFFFF;// 20 to 23 is zero
	GPIO_CRH |= 0x00200000;// to make GPIOA Is OUTPUT
 while(1)
	 {
	 GPIO_ODR |= GPIOA_10;
	for(int i=0;i<5000;i++);
	 GPIO_ODR &=~ GPIOA_10;
	for(int i=0;i<5000;i++);
	 }
}
